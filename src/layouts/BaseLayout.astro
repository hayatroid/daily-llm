---
import 'reset-css';
import '../styles/terminal.css';
import Prompt from '../components/Prompt.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Daily conversations with AI" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>
          <Prompt command="daily-llm" clickable={true} href="/" />
        </h1>
        <p class="comment"># Daily conversations with AI</p>
      </header>
      
      <main>
        <slot />
      </main>
      
      <footer>
        <p class="comment"># Generated with Astro | <a href="https://github.com/hayatroid/daily-llm">Source</a></p>
      </footer>
    </div>
    
    
    <style>
      header {
        margin-bottom: var(--space-xl);
      }
      
      header h1 {
        margin: 0;
        font-size: var(--text-lg);
        font-weight: var(--text-weight-normal);
        text-align: left;
      }
      
      header .comment {
        margin-top: var(--space-xs);
        color: var(--term-secondary);
      }
      
      footer {
        margin-top: var(--space-section);
        color: var(--term-secondary);
        font-size: var(--text-small);
        text-align: center;
      }
      
      footer a {
        color: var(--term-primary);
      }
    </style>
  </body>
</html>
