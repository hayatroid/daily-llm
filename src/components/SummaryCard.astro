---
export interface Props {
  summary: {
    frontmatter: {
      date: string;
      conversations: number;
      highlights: string[];
    };
    Content: any;
  };
}

const { summary } = Astro.props;
const { frontmatter, Content } = summary;
---

<article class="summary">
  <div class="meta">
    <span class="prompt">{'>'}</span> {frontmatter.date} 
    <span class="comment">({frontmatter.conversations} conversations)</span>
  </div>
  
  <div class="highlights">
    {frontmatter.highlights.map((highlight: string) => (
      <div class="highlight">
        <span class="command">*</span> {highlight}
      </div>
    ))}
  </div>
  
  <div class="content">
    <Content />
  </div>
  
  <div class="actions">
    <a href={`/${frontmatter.date}/`} class="command">cd {frontmatter.date}/</a>
  </div>
</article>

<style>
  .highlights {
    margin: 10px 0;
  }
  
  .highlight {
    margin: 5px 0;
    font-size: 13px;
  }
  
  .content {
    margin: 15px 0;
  }
  
  .actions {
    margin-top: 15px;
    padding-top: 10px;
    border-top: 1px solid var(--term-gray);
  }
</style>