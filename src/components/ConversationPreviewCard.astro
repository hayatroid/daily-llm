---
import CardContainer from './CardContainer.astro';
import StatsBadge from './StatsBadge.astro';
import { processConversation } from '../utils/contentProcessor.js';
import { ICONS, LABELS } from '../utils/icons.js';
import { extractSlugFromFile, createConversationUrl } from '../utils/slugUtils.js';

export interface Props {
  conversation: {
    frontmatter: {
      date: string;
      time: string;
      title: string;
      tags: string[];
    };
    Content: any;
    rawContent: () => string;
    file: string;
  };
  date: string;
}

const { conversation, date } = Astro.props;
const { frontmatter, rawContent, file } = conversation;

// Process the conversation to extract metadata
const processed = processConversation(rawContent());

// Extract conversation slug from file path
const filename = extractSlugFromFile(file);
---

<CardContainer variant="default" hoverable>
  <header class="preview-header">
    <h3 class="preview-title">{ICONS.ROBOT} {frontmatter.title}</h3>
    <div class="preview-stats">
      <StatsBadge icon={ICONS.TIME} value={frontmatter.time} />
      <StatsBadge icon={ICONS.EXCHANGE} value={processed.exchangeCount} label={LABELS.EXCHANGES} />
      {processed.hasCode && (
        <StatsBadge icon={ICONS.CODE} value="Code" />
      )}
    </div>
  </header>

  <div class="preview-content">
    <p class="preview-text">{processed.preview}</p>
  </div>

  {frontmatter.tags && frontmatter.tags.length > 0 && (
    <div class="preview-tags">
      {frontmatter.tags.slice(0, 3).map((tag: string) => (
        <span class="tag">#{tag}</span>
      ))}
      {frontmatter.tags.length > 3 && (
        <span class="more-tags">+{frontmatter.tags.length - 3} more</span>
      )}
    </div>
  )}

  <footer class="preview-actions">
    <a href={createConversationUrl(date, filename)} class="read-btn">
      <span class="read-text">{LABELS.READ_FULL}</span>
    </a>
    <div class="preview-meta">
      <span class="meta-info">{filename}</span>
    </div>
  </footer>
</CardContainer>

<style>
  .conversation-preview-card {
    display: flex;
    flex-direction: column;
    min-height: 300px;
    width: 100%;
  }

  .preview-header {
    margin-bottom: 1rem;
  }

  .preview-title {
    color: var(--term-green);
    margin: 0 0 0.75rem 0;
    font-size: 1.1rem;
    font-weight: bold;
    line-height: 1.3;
  }

  .preview-stats {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }


  .preview-content {
    flex: 1;
    margin-bottom: 1rem;
  }

  .preview-text {
    color: var(--term-text);
    line-height: 1.5;
    margin: 0;
    font-size: 0.9rem;
  }

  .preview-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
    margin-bottom: 1rem;
  }

  .tag {
    color: var(--term-cyan);
    font-size: 0.75rem;
    background: rgba(0, 255, 255, 0.1);
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
    border: 1px solid transparent;
  }

  .more-tags {
    color: var(--term-dim);
    font-size: 0.75rem;
    font-style: italic;
  }

  .preview-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid var(--term-gray);
    padding-top: 0.75rem;
    margin-top: auto;
  }

  .read-btn {
    color: var(--term-amber);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: bold;
    transition: color 0.2s ease;
  }

  .read-btn:hover {
    color: var(--term-green);
    text-decoration: underline;
  }

  .read-text {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
  }

  .preview-meta {
    font-size: 0.75rem;
    color: var(--term-dim);
  }

  .meta-info {
    font-family: monospace;
  }

  /* Responsive design */
  @media (max-width: 767px) {
    .preview-title {
      font-size: 1rem;
    }

    .preview-text {
      font-size: 0.85rem;
    }

    .preview-actions {
      flex-direction: column;
      gap: 0.5rem;
      align-items: flex-start;
    }
  }
</style>