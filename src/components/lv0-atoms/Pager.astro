---
export interface Props {
  prevUrl?: string;
  nextUrl?: string;
  parentUrl: string;
}

const { prevUrl, nextUrl, parentUrl } = Astro.props;
---

<div class="pager-controls">
  {prevUrl ? (
    <a href={prevUrl} class="nav-button">[←]</a>
  ) : (
    <span class="nav-button disabled">[←]</span>
  )}
  {nextUrl ? (
    <a href={nextUrl} class="nav-button">[→]</a>
  ) : (
    <span class="nav-button disabled">[→]</span>
  )}
  <a href={parentUrl} class="nav-button">[..]</a>
</div>

<style lang="scss">
  .pager-controls {
    display: flex;
    gap: var(--space-xs);
    align-items: baseline;
  }

  .nav-button {
    color: var(--term-link);
    text-decoration: none;
    white-space: nowrap;

    &.disabled {
      color: var(--term-text);
      cursor: not-allowed;
      pointer-events: none;
    }

    &:hover:not(.disabled) {
      text-decoration: underline;
    }
  }
</style>