---
export interface Props {
  variant?: 'default' | 'highlighted' | 'compact';
  hoverable?: boolean;
  class?: string;
}

const { variant = 'default', hoverable = false, class: className = '' } = Astro.props;
const cssClasses = [
  'card-container',
  `card-${variant}`,
  hoverable ? 'card-hoverable' : '',
  className
].filter(Boolean).join(' ');
---

<div class:list={cssClasses}>
  <slot />
</div>

<style>
  .card-container {
    border: 1px solid var(--term-green);
    border-radius: 4px;
    background: rgba(0, 255, 0, 0.02);
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
    width: 100%;
    box-sizing: border-box;
  }

  .card-default {
    padding: 1.25rem;
  }

  .card-highlighted {
    padding: 1.5rem;
    background: rgba(0, 255, 0, 0.03);
    border-width: 2px;
  }

  .card-compact {
    padding: 1rem;
    min-height: auto;
  }

  .card-hoverable:hover {
    border-color: var(--term-amber);
    background: rgba(255, 176, 0, 0.05);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 255, 0, 0.1);
  }

  /* Responsive design */
  @media (max-width: 767px) {
    .card-default,
    .card-highlighted {
      padding: 1rem;
    }

    .card-compact {
      padding: 0.75rem;
    }
  }
</style>