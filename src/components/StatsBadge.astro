---
export interface Props {
  icon: string;
  value: string | number;
  label?: string;
  variant?: 'default' | 'accent';
}

const { icon, value, label, variant = 'default' } = Astro.props;
const displayText = label ? `${value} ${label}` : value;
---

<span class:list={['stat', `stat-${variant}`]}>
  {icon} {displayText}
</span>

<style>
  .stat {
    color: var(--term-dim);
    font-size: 0.875rem;
    background: rgba(102, 102, 102, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-accent {
    color: var(--term-amber);
    background: rgba(255, 176, 0, 0.1);
    border: 1px solid var(--term-amber);
  }

  /* Responsive sizing */
  @media (max-width: 767px) {
    .stat {
      font-size: 0.8rem;
      padding: 0.2rem 0.4rem;
    }
  }
</style>